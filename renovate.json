{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": ["gomod", "dockerfile", "github-actions"],
  "golang": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "matchDepTypes": ["golang"],
      "rangeStrategy": "bump"
    },
    {
      "matchDatasources": ["golang-version"],
      "matchDepNames": ["go"],
      "rangeStrategy": "bump"
    }
  ]
}
